- messages.each do |message|
  .message
    .message-info
      .message-info__name
        = message.user.name
      .message-info__date
        = message.created_at.strftime("%Y/%m/%d %H:%M")
    .message-text
      - if message.content.present?
        %p.message-text__content
          = message.content
      = image_tag message.image.url, class: 'message-text__image' if message.image.nil?
